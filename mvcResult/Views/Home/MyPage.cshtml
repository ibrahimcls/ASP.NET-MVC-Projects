
@{
    ViewBag.Title = "MyPage";
}

<h2>MyPage</h2>
<div>
    <h1>İsim Ekle</h1>
</div>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.TextBox("ad",    "", new { placeholder = "adınız" })
        @Html.TextBox("soyad", "", new { placeholder = "soyadınız" })
        <button type="submit">Kaydet</button>
    }
</div>
<hr />
<div class="container">
    @if (ViewBag.List != null)
    {
        <ul>
            @foreach (string item in (List<string>)ViewBag.List)
            {
                <li>
                    @item
                </li>
            }
        </ul>
    }
</div>
